<form id="petcreation">
  <h2>Create pet</h2>
  <div class="mb-3">
    <label for="pet-name" class="form-label">Pet Name</label>
    <input
      type="name"
      class="form-control"
      id="petnameinput"
      aria-describedby="pet-names"
    />
  </div>
  <div class="mb-3">
    <label for="pet-age" class="form-label">Age</label>
    <input
      type="name"
      class="form-control"
      id="petageinput"
      aria-describedby="pet-age"
    />

  <div class="mb-3">
    <label for="pet-gender" class="form-label">Gender</label>
    <input type="name" class="form-control" id="pet-gender" />
  </div>

